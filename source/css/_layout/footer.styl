#footer
  position: relative
  background: linear-gradient(180deg, var(--anzhi-card-bg-none) 100%, var(--anzhiyu-background) 100%)
  background-attachment: scroll
  background-position: bottom
  background-size: cover
  +maxWidth768()
    background: var(--anzhiyu-background);
    z-index: 3
    margin-top: -1px;

  if hexo-config('footer_bg') != false
    &:before
      position: absolute
      width: 100%
      height: 100%
      background-color: alpha($dark-black, .5)
      content: ''

#footer-wrap	  
#ah-footer
  display: flex
  flex-direction: row
  width: 100%
  max-width: 900px
  margin: 1.2rem auto
  justify-content: space-between
  flex-wrap: wrap
  margin-bottom: 1.2rem
  padding: 0 1rem
  
  .footer-group
    min-width: 100px
    text-align: center
    
    .footer-links
      display: flex
      flex-direction: column

      a.footer-item
        color: var(--anzhiyu-fontcolor)
        line-height: 1rem
        margin: .38rem 0

        &:hover
          text-decoration: underline
		  
#fotter-copyright
  position: relative
  padding: 0 20px
  margin-bottom: 2rem
  text-align: center

  a
    color: var(--anzhiyu-fontcolor)

    &:hover
      text-decoration: underline

  .footer-separator
    margin: 0 4px
	
#footer-icp
  position: relative
  padding: 6px 12px
  color: var(--anzhiyu-fontcolor)
  text-align: center

  a
    color: var(--anzhiyu-background)

    &:hover
      text-decoration: underline

  .footer-separator
    margin: 0 4px

  .icp-icon
    padding: 0 4px
    max-height: 1.4em
    width: auto
    vertical-align: text-bottom
